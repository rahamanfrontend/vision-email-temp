{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}